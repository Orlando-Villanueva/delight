APP_NAME="Delight"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/New_York
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=4

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
# DB_HOST=
# DB_PORT=
# DB_DATABASE=forge
# DB_USERNAME=forge
# DB_PASSWORD=

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

CACHE_STORE=file
QUEUE_CONNECTION=database

# Redis Configuration (for production caching)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_CACHE_DB=1

# Telescope Configuration (LOCAL DEVELOPMENT ONLY)
# Set to true only in local development, false or omit in production
TELESCOPE_ENABLED=true
TELESCOPE_PATH=telescope
TELESCOPE_PRUNE_HOURS=24
# TELESCOPE_ADMIN_EMAILS=admin@example.com,another@example.com

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Local Development - Mailpit
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@delight.test"
MAIL_FROM_NAME="Delight"

# Production - Mailgun (uncomment for production)
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=your-domain.mailgun.org
# MAILGUN_SECRET=your-secret-key
# MAILGUN_ENDPOINT=api.mailgun.net
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="Delight"

VITE_APP_NAME="${APP_NAME}"

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# X OAuth credentials (Client Secret â‰  Bearer Token)
X_CLIENT_ID=
